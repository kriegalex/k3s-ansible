apiVersion: cert-manager.io/v1
kind: ClusterIssuer
metadata:
  name: letsencrypt-prod
spec:
  acme:
    server: https://acme-v02.api.letsencrypt.org/directory
    email: {{ cert_manager.route53.email }}
    privateKeySecretRef:
      name: letsencrypt-prod
    solvers:
    - dns01:
        route53:
          region: {{ cert_manager.route53.region }}
          accessKeyID: {{ cert_manager.route53.access_key_id }}
          secretAccessKeySecretRef:
            name: route53-secret
            key: secret-access-key